<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img9"
    android:visibility="visible"
    tools:context="com.example.smart.farmersreminder.MainActivity">


    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#3b3ee1"
        android:text="Welcome Farmers"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.419"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="37dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button1"
        android:layout_width="117dp"
        android:layout_height="45dp"
        android:textSize="17dp"
        android:text="All CROPS"
        android:background="#f5d666"
        android:visibility="visible"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="79dp"
        android:layout_alignTop="@+id/spinner1"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="178dp"
        tools:layout_editor_absoluteY="87dp"
        android:layout_above="@+id/text2"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="36dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:text="CROP"
        android:textSize="30dp"
        android:visibility="visible"
        android:layout_above="@+id/text3"
        android:layout_alignStart="@+id/text3"
        android:layout_marginBottom="27dp" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text2"
        android:layout_alignEnd="@+id/spinner"
        android:layout_marginEnd="24dp"
        android:layout_alignBottom="@+id/text2" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:fontFamily="sans-serif"
        android:textSize="30dp"
        android:text="BREED"
        android:visibility="visible"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/button3"
        android:layout_alignStart="@+id/text1" />

    <TextView
        android:id="@+id/text4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20dp"
        android:text="SEASON"
        android:layout_alignBaseline="@+id/button1"
        android:layout_alignBottom="@+id/button1"
        android:layout_toStartOf="@+id/spinner1" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text3"
        android:layout_alignStart="@+id/text4"
        android:layout_alignBottom="@+id/text3" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f5d666"
        android:text="Search"
        android:onClick="onclick"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/button1"
        android:layout_marginBottom="83dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#f5d666"
        android:text="FEEDBACK"
        android:layout_alignBaseline="@+id/button2"
        android:layout_alignBottom="@+id/button2"
        android:layout_alignStart="@+id/spinner" />


</RelativeLayout>
