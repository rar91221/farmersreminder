<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img9">

    <EditText
        android:id="@+id/editText1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:ems="15"
        android:textSize="12dp"
        android:background="#fff"
        android:textColorHint="#000"
        android:hint="USERNAME"
        android:textColor="#000"
        android:inputType="textPersonName"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button1"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="#8080df"
        android:layout_marginTop="46dp"
        android:text="SUBMIT"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:onClick="onClick"/>

    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="42dp"
        android:ems="15"
        android:textSize="12dp"
        android:background="#fff"
        android:textColor="#000"
        android:textColorHint="#000"
        android:hint="PASSWORD"
        android:inputType="textPassword"
        android:layout_below="@+id/editText1"
        android:layout_alignStart="@+id/editText1" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:textColor="#2b0b30"
        android:textSize="30dp"
        android:text="LOGIN"
        android:layout_marginTop="44dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="50dp"
        android:layout_height="35dp"
        app:srcCompat="@drawable/img12"
        android:layout_alignTop="@+id/editText1"
        android:layout_toEndOf="@+id/editText1" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="50dp"
        android:layout_height="35dp"

        android:layout_alignTop="@+id/editText2"
        android:layout_toEndOf="@+id/editText2"
        app:srcCompat="@drawable/img14" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textColor="#3b3be1"
        android:text="New To Register?"
        android:layout_below="@+id/button1"
        android:layout_alignStart="@+id/editText2"
        android:layout_marginTop="36dp" />

</RelativeLayout>